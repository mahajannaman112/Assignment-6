#include <iostream>
using namespace std;

struct DNode {
    int data;
    DNode* prev;
    DNode* next;
    DNode(int d): data(d), prev(NULL), next(NULL) {}
};

struct CNode {
    int data;
    CNode* next;
    CNode(int d): data(d), next(NULL) {}
};

void insertD(DNode** head, int data) {
    DNode* n = new DNode(data);
    if (*head == NULL) {
        *head = n;
        return;
    }
    DNode* temp = *head;
    while (temp->next) temp = temp->next;
    temp->next = n;
    n->prev = temp;
}

void printD(DNode* head) {
    while (head) {
        cout << head->data << " ";
        head = head->next;
    }
    cout << endl;
}

void removeEvenD(DNode** head) {
    DNode* curr = *head;
    while (curr) {
        if (curr->data % 2 == 0) {
            if (curr->prev) curr->prev->next = curr->next;
            if (curr->next) curr->next->prev = curr->prev;
            if (curr == *head) *head = curr->next;
            DNode* temp = curr;
            curr = curr->next;
            delete temp;
        } else {
            curr = curr->next;
        }
    }
}

void insertC(CNode** head, int data) {
    CNode* n = new CNode(data);
    if (*head == NULL) {
        *head = n;
        n->next = n;
        return;
    }
    CNode* temp = *head;
    while (temp->next != *head) temp = temp->next;
    temp->next = n;
    n->next = *head;
}

void printC(CNode* head) {
    if (!head) return;
    CNode* temp = head;
    do {
        cout << temp->data << " ";
        temp = temp->next;
    } while (temp != head);
    cout << endl;
}

void removeEvenC(CNode** head) {
    if (*head == NULL) return;

    CNode* curr = *head;
    CNode* prev = NULL;

    while (curr->next != *head) {
        if (curr->data % 2 == 0) {
            if (curr == *head) {
                CNode* last = *head;
                while (last->next != *head) last = last->next;
                *head = curr->next;
                last->next = *head;
                CNode* temp = curr;
                curr = curr->next;
                delete temp;
            } else {
                prev->next = curr->next;
                CNode* temp = curr;
                curr = curr->next;
                delete temp;
            }
        } else {
            prev = curr;
            curr = curr->next;
        }
    }

    if (curr->data % 2 == 0) {
        if (curr == *head) {
            delete curr;
            *head = NULL;
        } else {
            prev->next = *head;
            delete curr;
        }
    }
}

int main() {
    DNode* Dhead = NULL;
    insertD(&Dhead, 1);
    insertD(&Dhead, 2);
    insertD(&Dhead, 3);
    insertD(&Dhead, 4);
    insertD(&Dhead, 6);

    cout << "Doubly List before: ";
    printD(Dhead);
    removeEvenD(&Dhead);
    cout << "Doubly List after: ";
    printD(Dhead);

    CNode* Chead = NULL;
    insertC(&Chead, 2);
    insertC(&Chead, 5);
    insertC(&Chead, 8);
    insertC(&Chead, 11);

    cout << "Circular List before: ";
    printC(Chead);
    removeEvenC(&Chead);
    cout << "Circular List after: ";
    printC(Chead);

    return 0;
}
